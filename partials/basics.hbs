{{#resume.basics}}
    <div class="profile-container">
        <img class="profile" src="{{image}}" alt="" />
        <h1 class="name">{{name}}</h1>
        <h3 class="tagline">{{label}}</h3>
    </div><!--//profile-container-->

    <div class="contact-container container-block">
      <head><h4>Contact</h4></head>
        <ul class="list-unstyled contact-list">
            {{#if location}}
              <li class="location">
                <a href="{{mapURL location}}" target="_blank" itemscope itemtype="http://schema.org/PostalAddress">
                  <i class="fa fa-location-arrow"></i>
                  <span class="info">
                    {{#if location.address}}<span itemprop="streetAddress">{{location.address}},</span>{{/if}}
                    {{#if location.postalCode}}<span itemprop="postalCode">{{location.postalCode}},</span>{{/if}}
                    {{#if location.city}}<span itemprop="addressLocality">{{location.city}},</span>{{/if}}
                    {{#if location.region}}<span itemprop="addressRegion">{{location.region}}.</span>{{/if}}
                  </span>
                </a>
              </li>
            {{/if}}
            {{#if email}}<li class="email"><i class="fa fa-envelope"></i><a href="mailto:{{email}}">{{email}}</a></li>{{/if}}
            {{#if phone}}<li class="phone"><i class="fa fa-phone"></i><a href="tel:{{phone}}">{{phone}}</a></li>{{/if}}
            {{#if url}}<li class="website"><i class="fa fa-globe"></i><a href="{{url}}" target="_blank">{{displayUrl url}}</a></li>{{/if}}
            {{#if cv}}<li class="website"><i class="fa fa-user-circle-o"></i><a href="{{cv}}" target="_blank">Curriculum vitae</a></li>{{/if}}

            {{#each profiles}}
                <li class="{{toLowerCase network}}"><i class="fa fa-{{toLowerCase network}}"></i><a href="{{url}}" target="_blank">{{#if url}}{{displayUrl url}}{{else}}@{{username}}{{/if}}</a></li>
            {{/each}}
            <!--                    <li class="twitter"><i class="fa fa-twitter"></i><a href="https://twitter.com/3rdwave_themes" target="_blank">@twittername</a></li>  -->
        </ul>
    </div><!--//contact-container-->
{{/resume.basics}}
