{{#if resume.teaching}}
    <section class="section experiences-section">
        <h2 class="section-title"><i class="fas fa-graduation-cap"></i>Teaching</h2>

        {{#resume.teaching}}
            <div class="item">
                <div class="meta">
                    <div class="upper-row">
                        <h3 class="job-title">{{course}}</h3>
                        <div class="time">{{year startDate}} - {{year endDate}}</div>
                    </div><!--//upper-row-->
                    <div class="company">{{#if url}}<a href="{{url}}" target="_blank">{{/if}}{{name}}{{#if location}}, {{location}}{{/if}}{{#if url}}</a>{{/if}}</div>
                </div><!--//meta-->
                <div class="details">
                    <p align="justify">{{#markdown}}{{summary}}{{/markdown}}</p>
                </div><!--//details-->
            </div><!--//item-->
        {{/resume.teaching}}
    </section><!--//section-->
{{/if}}
